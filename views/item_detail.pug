extends layout

block content
  h1 #{item.name}

  p #[strong Category: ]
    a(href=item.category.url) #{item.category.name}
  if item.manufacturer
    a(href=item.manufacturer.url) #{item.manufacturer.name}

  p #[strong Price: ]
    strong #{item.price}

  div(style='margin-left:20px;margin-top:20px')
   

  hr
  p
    a(href=item.url+'/delete') Delete Item
  p
    a(href=item.url+'/update') Update Item
